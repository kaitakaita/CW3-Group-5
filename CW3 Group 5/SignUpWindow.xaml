<Window x:Class="CW3_Group_5.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up" Height="400" Width="350" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Full Name -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="FullNameTextBox"
                     Height="30"
                     VerticalContentAlignment="Center"
                     TextChanged="FullNameTextBox_TextChanged"/>
            <TextBlock x:Name="FullNamePlaceholder"
                       Text="Full Name"
                       Foreground="Gray"
                       Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="Visible"/>
        </Grid>

        <!-- Email -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <TextBox x:Name="EmailTextBox"
                     Height="30"
                     VerticalContentAlignment="Center"
                     TextChanged="EmailTextBox_TextChanged"/>
            <TextBlock x:Name="EmailPlaceholder"
                       Text="Email"
                       Foreground="Gray"
                       Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="Visible"/>
        </Grid>

        <!-- Password -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <PasswordBox x:Name="PasswordBox"
                         Height="30"
                         VerticalContentAlignment="Center"
                         PasswordChanged="PasswordBox_PasswordChanged"/>
            <TextBlock x:Name="PasswordPlaceholder"
                       Text="Password"
                       Foreground="Gray"
                       Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="Visible"/>
        </Grid>

        <!-- Confirm Password -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <PasswordBox x:Name="ConfirmPasswordBox"
                         Height="30"
                         VerticalContentAlignment="Center"
                         PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
            <TextBlock x:Name="ConfirmPasswordPlaceholder"
                       Text="Confirm Password"
                       Foreground="Gray"
                       Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="Visible"/>
        </Grid>

        <!-- Sign Up Button -->
        <Button Grid.Row="4"
                Content="Sign Up"
                Height="35"
                Margin="0,10,0,0"
                Click="SignUp_Click"/>

        <!-- Return Home Button -->
        <Button Grid.Row="5"
                Content="Return Home"
                Height="30"
                Margin="0,10,0,0"
                Click="ReturnHome_Click"/>
    </Grid>
</Window>




