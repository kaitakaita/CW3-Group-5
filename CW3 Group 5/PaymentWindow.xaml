<Window x:Class="CW3_Group_5.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payment" Height="350" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Total Amount Display -->
        <TextBlock x:Name="TotalAmountTextBlock"
                   Grid.Row="0"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Payment Details -->
        <Grid x:Name="PaymentDetailsGrid" Grid.Row="1">
            <!-- GCash Number Input -->
            <StackPanel x:Name="GcashPanel">
                <TextBlock Text="Enter GCash Number:" Margin="0,0,0,5"/>
                <TextBox x:Name="GcashNumberTextBox"
                         MaxLength="11"
                         Width="200"
                         Margin="0,0,0,10"
                         ToolTip="Enter 11-digit GCash number"/>
            </StackPanel>
            <!-- OTP Input -->
            <StackPanel x:Name="OtpPanel" Visibility="Collapsed">
                <TextBlock Text="Enter OTP Code:" Margin="0,0,0,5"/>
                <TextBox x:Name="OtpTextBox"
                         MaxLength="6"
                         Width="100"
                         Margin="0,0,0,10"
                         ToolTip="Enter 6-digit OTP code"/>
            </StackPanel>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Width="100"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="Cancel_Click"/>
            <Button Content="Process Payment"
                    Width="120"
                    Height="30"
                    Click="ProcessPayment_Click"/>
        </StackPanel>
    </Grid>
</Window>