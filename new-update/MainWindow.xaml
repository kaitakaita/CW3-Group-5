<Window x:Class="CW3_Group_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Images/WelcomeScreenBG.png"/>
    </Window.Background>

    <Grid>

        <!-- "Find your Perfect Hotel" Text -->
        <TextBlock HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="60,77,0,0"
                   Width="233"
                   Height="79"
                   Text="Find your Perfect Hotel"
                   TextWrapping="Wrap"
                   FontFamily="Bahnschrift"
                   FontSize="35"
                   Foreground="#FFD8B93E"/>

        <!-- "Book Now" Button -->
        <Button Content="Book Now"
        Width="120"
        Height="30"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="60,160,0,0"
        Background="Transparent"
        BorderBrush="White"
        Foreground="White"
        FontFamily="Bahnschrift"
        Click="BookNow_Click"/>


        <!-- "Home" Button -->
        <Button Content="Home"
                Width="50"
                Height="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="648,15,0,0"
                Background="Transparent"
                BorderBrush="Transparent"
                Foreground="White"
                FontFamily="Bahnschrift"
                FontWeight="Bold"/>

        <!-- Admin Login -->
        <Button Content="Admin Login"
                Width="70"
                Height="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="708,15,0,0"
                Background="Transparent"
                BorderBrush="Transparent"
                Foreground="White"
                FontFamily="Bahnschrift"
                FontWeight="Bold" RenderTransformOrigin="0.486,1.536" Click="Button_Click"/>

        <!-- Room Label Panel -->
        <Border BorderBrush="Black"
                BorderThickness="1"
                HorizontalAlignment="Left"
                Height="240"
                Margin="501,94,0,0"
                VerticalAlignment="Top"
                Width="271"
                Background="#F2FFFFFF">
            <Grid>
                <TextBox HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="10,10,0,0"
                         Width="84"
                         Height="29"
                         Text="Rooms"
                         TextWrapping="Wrap"
                         FontFamily="Bahnschrift"
                         FontSize="25"
                         BorderBrush="{x:Null}"
                         Background="{x:Null}"
                         Foreground="#FFD8B93E"/>
            </Grid>
        </Border>

        <!-- Slideshow Image -->
        <Image x:Name="SlideshowImage"
               Source="pack://application:,,,/Images/HotelImg1.jpg"
               HorizontalAlignment="Left"
               Height="183"
               Width="244"
               Margin="515,138,0,0"
               VerticalAlignment="Top"
               Stretch="UniformToFill"/>
        <Button Content="See all" HorizontalAlignment="Left" Height="18" Margin="722,115,0,0" VerticalAlignment="Top" Width="38" Background="{x:Null}" BorderBrush="{x:Null}"/>

    </Grid>
</Window>
